@using RunGroopWebApp.ViewModels
@model DashboardVM

<h3 class="mb-5 text-center">Dashboard</h3>
<div class="d-flex mb-3">
    <div class="btn-group me-3">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            @ViewBag.Category
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/Dashboard?category=club">Clubs</a></li>
            <li><a class="dropdown-item" href="/Dashboard?category=race">Races</a></li>
        </ul>
    </div>
    <a class="btn btn-secondary me-3" role="button" asp-controller="Club" asp-action="Create">Create Club</a>
    <a class="btn btn-secondary me-3" role="button" asp-controller="Race" asp-action="Create">Create Race</a>
    <a class="btn btn-secondary me-3" role="button" asp-controller="Dashboard" asp-action="EditUserProfile">Edit Profile</a>
</div>
@if(Model.Clubs.Count > 0)
{
    <div class="album py-5 bg-light mb-5">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Clubs)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap" width="100%" height="225">
                            <div class="card-body">
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Details" asp-route-id="@item.Id">View</a>
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@if (Model.Races.Count > 0)
{
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Races)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap" width="100%" height="225">
                            <div class="card-body">
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Details" asp-route-id="@item.Id">View</a>
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}