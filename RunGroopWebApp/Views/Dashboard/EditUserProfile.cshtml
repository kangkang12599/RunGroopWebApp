@{

}
@using RunGroopWebApp.Data.Enum;
@using RunGroopWebApp.ViewModels;
@model EditProfileVM;

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" class="img-fluid d-block my-3 w-25 border border-3 bg-white rounded" width="30" alt="Responsive image">
    </div>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
    @if(ViewBag.success != null)
    {
        <div class="alert alert-success mb-3" role="alert">@ViewBag.success</div>
    }
    <div class="form-group mb-3">
        <label asp-for="Email" class="mb-2">Title</label>
        <input asp-for="Email" class="form-control" placeholder="Title" readonly>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Name" class="mb-2">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Pace" class="mb-2">Pace</label>
        <input asp-for="Pace" class="form-control" placeholder="Pace">
        <span asp-validation-for="Pace" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Mileage" class="mb-2">Mileage</label>
        <input asp-for="Mileage" class="form-control" placeholder="Mileage">
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Street" class="mb-2">Street</label>
        <input asp-for="Street" class="form-control" placeholder="Street">
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="City" class="mb-2">City</label>
        <input asp-for="City" class="form-control" placeholder="City">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="State" class="mb-2">State</label>
        <input asp-for="State" class="form-control" placeholder="State">
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Image" class="mb-2">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <input asp-for="ImageUrl" hidden />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>