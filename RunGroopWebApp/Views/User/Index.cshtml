@{
}
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRlTGvbQ2lOzbDJdw1tCCqraoPCIyfAIY0EHg&usqp=CAU" style="object-fit: cover" alt="Card image cap" width="100%" height="225">
                        <div class="card-body">
                            <p class="card-text">@item.UserName</p>
                            <p class="card-text">@item.Email</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="User" asp-action="Details" asp-route-id="@item.Id">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>